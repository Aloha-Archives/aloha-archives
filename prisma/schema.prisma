generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

enum Condition {
  excellent
  good
  fair
  poor
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition
  owner     String
}


model PersonaQuiz {

  id              Int      @id @default(autoincrement())

  goal            String

  usage           String

  comfortLevel    String

  dataType        String

  interaction     String

  email           String

  assignedPersona String

}

model Dataset {
  id        Int       @id @default(autoincrement())
  name      String
  url       String
  viewCount Int       @default(0)
  topic     String
  jsonPath  String    @default("")
}

